[module/load-average]
type = custom/script
exec = uptime | grep -ohe 'load average[s:][: ].*' | awk '{ print $3" "$4" "$5"," }' | sed 's/,//g'
interval = 100

label = %output:10%

format-foreground = ${colors.shade1}
format-background = ${colors.background}
format-prefix = " ÔÉß "
format-prefix-foreground = #62FF00
format-underline = #62FF00

